<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="20dp">





    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp">



        <ImageView
            android:id="@+id/logo"
            android:layout_width="90dp"
            android:layout_height="60dp"
            android:src="@drawable/logo_gowaste"/>

        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/logo"
            android:layout_marginStart="10dp"
            android:text="GoWaste"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>
    </RelativeLayout>






    <ImageView
        android:id="@+id/imageProfile"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/header"
        android:layout_marginTop="45dp"
        android:src="@drawable/logo_gowaste1"
        android:layout_marginStart="45dp"
        android:scaleType="centerCrop"/>




    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageProfile"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100dp"
        android:layout_marginStart="15dp"

        android:text="Selamat Datang di GoWaste!"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"/>




    <TextView
        android:id="@+id/descriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomeText"
        android:layout_alignParentStart="true"

        android:layout_marginStart="15dp"


        android:layout_marginTop="10dp"
        android:text="Ga perlu lagi pusing ngurusin sampah, GoWaste bakal ambil sampahmu!"
        android:textSize="18sp"
        android:textColor="@color/black"
        />











    <Button
        android:id="@+id/btnMasuk"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_below="@id/descriptionText"
        android:layout_alignParentStart="true"
        android:textSize="18dp"

        android:layout_marginStart="23dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="10dp"


        android:backgroundTint="#4CAF50"
        android:text="Masuk"
        android:textColor="@android:color/white" />





    <Button
        android:id="@+id/btnDaftar"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_below="@id/descriptionText"
        android:textSize="18dp"

        android:layout_marginTop="60dp"
        android:layout_toEndOf="@id/btnMasuk"
        android:layout_marginStart="10dp"
        android:text="Daftar"
        android:backgroundTint="#324CAF50"
        android:textColor="#4CAF50"/>




</RelativeLayout>
